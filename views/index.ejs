<% include ./partials/header %>

<body>
  <% include ./partials/navbar %>

  <div class="top-picture position-relative overflow-hidden p-3 p-md-5 text-center bg-light" 
  style="background-image:url('img/backgrounds/rocket-launch-bg.jpg');
  background-size: cover;
  background-position: center 80%;">
    <div class="col-md-5 p-lg-5 mx-auto my-5">
      <h1 class="display-4 font-weight-normal text-light" style="text-shadow: 2px 2px 20px black;">Recent Launches</h1>
      <p class="lead font-weight-normal text-light" style="text-shadow: 2px 2px 20px black;">What are the most recent lanuches in the last month?</p>
    </div>
    <div class="product-device shadow-sm d-none d-md-block"></div>
    <div class="product-device product-device-2 shadow-sm d-none d-md-block"></div>
  </div>

  <div class="album py-5 bg-light">
    <div class="container">

      <div class="row">
        <% if (launches.length !== 0) { %>
          <% for(let i = launches.length - 1; i >= 0; --i) { %>
            <% const launch = launches[i]; %>
            <% include ./partials/components/card %>
          <% } %>
        <% } else { %>
            <div class="container">No results found.</div>
        <% } %>
    
      </div>
    </div>
  </div>

<% include ./partials/footer %>